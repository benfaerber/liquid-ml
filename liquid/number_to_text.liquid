{{ number }}
{% case number %}
    {% when 1 %}
        One
    {% when 2 %}
        Two
    {% when 3 %}
        Three
    {% when 4 %}
        Four
    {% when 5 %}
        Five
    {% when 6 %}
        Six
    {% when 7 %}
        Seven
    {% when 8 %}
        Eight
    {% when 9 %}
        Nine
    {% when 10 %}
        Ten
    {% else %}
        Unknown Number: {{ number }}
{% endcase %}